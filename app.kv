# Create your Kivy layout in the kv language here

GridLayout:
    cols:2
    BoxLayout:
        size_hint_x: 0.3
        size_hint_y: 1
        orientation: 'vertical'
        Label:
            text: 'Sort by:'
        Spinner:
            # text_autoupdate sets the text to the first value of the values property
            text_autoupdate: True
            # values takes a list - could be a literal here or variable in app
            values: app.place_values
            # on_text is the event (not on_release) when the text updates (spinner option is selected)
            # note that on_text runs even when the text is set for the very first time
            on_text: app.change_state(self.text)

        Label:
            text: 'Add New Place...'
        Label:
            text: 'Name:'
        TextInput:
            id: name
            multiline: False
            write_tab: False
        Label:
            text: 'Country:'
        TextInput:
            id: country
            multiline: False
            write_tab: False
        Label:
            text: 'Priority:'
        TextInput:
            id: priority
            multiline: False
            write_tab: False
        Button:
            text: 'Add Place'
            on_release: app.press_add(name.text, country.text, priority.text)
        Button:
            text: 'Clear'
            on_press: app.clear_all()

    BoxLayout:
        size_hint_x: 0.7
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.05
            Label:
                text: 'places to visit: ' + str(app.status_number)
        BoxLayout:
            size_hint_y: 0.5
            orientation: 'vertical'
            id: entries_box
        BoxLayout:
            size_hint_y: 0.05
            Label:
                id: status_text
                text: app.status_text







